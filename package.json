{
  "name": "@claude-squad/claude-hub",
  "version": "0.1.0",
  "description": "Claude Hub - A marketplace of Claude Code plugins for software development workflows",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "claude-code",
    "plugins",
    "rails",
    "react",
    "typescript",
    "workflow",
    "automation",
    "code-review"
  ],
  "author": "",
  "license": "MIT"
}
